<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2e2c2c"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="360dp"
        android:layout_height="105dp"
        android:background="@drawable/textfield"
        android:id="@+id/Textview1"
        android:textSize="40sp"
        android:textColor="@color/white">

    </TextView>
    <TextView
        android:layout_width="360dp"
        android:layout_height="105dp"
        android:background="@drawable/textfield"
        android:id="@+id/Textview2"
        android:textSize="40sp"
        android:layout_below="@+id/Textview1"
        android:textColor="@color/white">

    </TextView>
    <Button
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:textSize="25sp"
        android:text="B"
        android:textColor="@color/black"
        android:id="@+id/buttonBackspace"
        android:layout_toRightOf="@+id/buttonClear"
        android:layout_below="@+id/Textview2">

    </Button>
    <Button
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:textSize="25sp"
        android:text="%"
        android:textColor="@color/black"
        android:id="@+id/buttonPercent"
        android:layout_toRightOf="@+id/buttonBackspace"
        android:layout_below="@+id/Textview2">

    </Button>
    <Button
        android:layout_width="96dp"
        android:layout_height="88dp"
        android:textSize="25sp"
        android:text="/"
        android:layout_marginLeft="2dp"
        android:textColor="@color/black"
        android:id="@+id/buttonDivide"
        android:layout_toRightOf="@+id/buttonPercent"
        android:layout_below="@+id/Textview2">

    </Button>
    <Button
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:textSize="25sp"
        android:text="AC"
        android:textColor="@color/black"
        android:id="@+id/buttonClear"
        android:layout_below="@+id/Textview2">

    </Button>


    <Button
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:textSize="25sp"
        android:text="7"
        android:textColor="@color/black"
        android:id="@+id/button7"
        android:layout_below="@+id/buttonClear">

    </Button>
    <Button
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:textSize="25sp"
        android:text="8"
        android:textColor="@color/black"
        android:id="@+id/button8"
        android:layout_toRightOf="@+id/button7"
        android:layout_below="@+id/buttonBackspace">

    </Button>
    <Button
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:textSize="25sp"
        android:padding="2dp"
        android:text="9"
        android:textColor="@color/black"
        android:id="@+id/button9"
        android:layout_toRightOf="@+id/button8"
        android:layout_below="@+id/buttonPercent">

    </Button>
    <Button
        android:layout_width="96dp"
        android:layout_height="88dp"
        android:textSize="25sp"
        android:layout_marginLeft="2dp"
        android:text="*"
        android:textColor="@color/black"
        android:layout_toRightOf="@+id/button9"
        android:id="@+id/buttonMul"
        android:layout_below="@+id/buttonDivide">


    </Button>

    <Button
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:textSize="25sp"
        android:text="4"
        android:textColor="@color/black"
        android:id="@+id/button4"
        android:layout_below="@+id/button7">

    </Button>
    <Button
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:textSize="25sp"
        android:text="5"
        android:textColor="@color/black"
        android:id="@+id/button5"
        android:layout_toRightOf="@+id/button4"
        android:layout_below="@+id/button8">

    </Button>
    <Button
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:textSize="25sp"
        android:text="6"
        android:textColor="@color/black"
        android:id="@+id/button6"
        android:layout_toRightOf="@+id/button5"
        android:layout_below="@+id/button9">

    </Button>
    <Button
        android:layout_width="96dp"
        android:layout_height="88dp"
        android:textSize="25sp"
        android:text="-"
        android:layout_marginLeft="2dp"
        android:textColor="@color/black"
        android:id="@+id/buttonMin"
        android:layout_toRightOf="@+id/button6"
        android:layout_below="@+id/buttonMul">

    </Button>

    <Button
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:textSize="25sp"
        android:text="1"
        android:textColor="@color/black"
        android:id="@+id/button1"
        android:layout_below="@+id/button4">

    </Button>
    <Button
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:textSize="25sp"
        android:text="2"
        android:textColor="@color/black"
        android:id="@+id/button2"
        android:layout_toRightOf="@+id/button1"
        android:layout_below="@+id/button5">

    </Button>
    <Button
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:textSize="25sp"
        android:text="3"
        android:textColor="@color/black"
        android:id="@+id/button3"
        android:layout_toRightOf="@+id/button2"
        android:layout_below="@+id/button6">

    </Button>
    <Button
        android:layout_width="96dp"
        android:layout_height="88dp"
        android:textSize="25sp"
        android:layout_marginLeft="2dp"
        android:text="+"
        android:textColor="@color/black"
        android:id="@+id/buttonAdd"
        android:layout_toRightOf="@id/button3"
        android:layout_below="@+id/buttonMin">

    </Button>

    <Button
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:textSize="25sp"
        android:text="0"
        android:textColor="@color/black"
        android:id="@+id/button0"
        android:layout_below="@+id/button1">

    </Button>
    <Button
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:textSize="25sp"
        android:text="."
        android:textColor="@color/black"
        android:id="@+id/buttonDot"
        android:layout_toRightOf="@+id/button0"
        android:layout_below="@+id/button2">

    </Button>
    <Button
        android:layout_width="186dp"
        android:layout_height="88dp"
        android:textSize="35sp"
        android:text="="
        android:textColor="@color/black"
        android:id="@+id/buttonEqual"
        android:layout_toRightOf="@+id/buttonDot"
        android:layout_below="@+id/button3">

    </Button>

</RelativeLayout>